{
    "name": "mmo-phaser-game",
    "description": "An MMO RPG game built with Phaser and TypeScript",
    "version": "0.1.0",
    "type": "module",
    "private": true,
    "workspaces": [
        "client",
        "server",
        "shared"
    ],
    "scripts": {
        "dev": "npm-run-all --parallel dev:client dev:server",
        "dev:client": "cd client && vite --config ../vite/config.dev.mjs",
        "dev:server": "cd server && node --loader ts-node/esm src/index.ts",
        "build": "npm-run-all --parallel build:shared build:server build:client",
        "build:client": "cd client && vite build --config ../vite/config.prod.mjs",
        "build:server": "cd server && tsc -b",
        "build:shared": "cd shared && tsc -b",
        "start": "cd server && node dist/index.js",
        "clean": "rimraf */dist",
        "db:generate": "cd server && drizzle-kit generate:pg",
        "db:migrate": "cd server && node --loader ts-node/esm src/database/migrate.ts",
        "db:studio": "cd server && drizzle-kit studio"
    },
    "devDependencies": {
        "@types/node": "^20.11.24",
        "@types/pg": "^8.11.11",
        "@types/ws": "^8.18.0",
        "drizzle-kit": "^0.20.14",
        "fastify": "^4.29.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^5.0.5",
        "terser": "^5.31.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "vite": "^5.3.1"
    },
    "dependencies": {
        "@fastify/cors": "^9.0.1",
        "@fastify/websocket": "^8.3.1",
        "better-sqlite3": "^11.9.0",
        "dotenv": "^16.4.7",
        "drizzle-orm": "^0.29.4",
        "leaflet": "^1.9.4",
        "pg": "^8.11.3",
        "phaser": "^3.88.2",
        "redis": "^4.6.13",
        "sqlite3": "^5.1.7",
        "ws": "^8.16.0"
    }
}

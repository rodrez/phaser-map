{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "shared": ["../shared/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "references": [
    { "path": "../shared" }
  ]
} 